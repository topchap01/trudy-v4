{
  "name": "trudy-v4",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "build:prompts": "pnpm -C packages/prompts build",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter @trudy/backend dev",
    "lint": "pnpm --filter frontend lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "typecheck": "pnpm --filter @trudy/backend typecheck",
    "smoke": "pnpm --filter @trudy/backend smoke",
    "smoke:warroom": "pnpm --filter @trudy/backend exec bash ./scripts/probe-warroom.sh",
    "prompts:bundle": "pnpm --filter @trudy/prompts build"
  },
  "devDependencies": {
    "dotenv": "^17.2.1",
    "prisma": "^6.14.0",
    "tsx": "^4.20.6"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "zod": "^4.0.17"
  }
}

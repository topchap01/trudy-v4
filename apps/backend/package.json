{
  "name": "@trudy/backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "smoke": "bash ./scripts/smoke.sh",
    "smoke:llm": "SMOKE_LLM=1 bash scripts/smoke.sh",
    "guardrails": "bash -c \"! git ls-files -z | xargs -0 grep -nE 'packages/prompts|@trudy/prompts' -- || (echo '‚ùå Found forbidden prompt imports'; exit 1)\"",
    "lint": "pnpm exec eslint src --ext .ts,.js",
    "check": "pnpm run guardrails && pnpm run lint && pnpm run typecheck"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.16",
    "@prisma/client": "^6.14.0",
    "@trudy/prompts": "workspace:*",
    "ai": "^5.0.17",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "pagedjs-cli": "^0.4.3",
    "docx": "^9.5.1",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "openai": "^5.13.1",
    "pdfkit": "^0.17.2",
    "playwright-core": "^1.54.2",
    "puppeteer": "^24.19.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.11",
    "@types/pdfkit": "^0.17.2",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.33.0",
    "prisma": "6.14.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2",
    "vitest": "^3.2.4"
  }
}
